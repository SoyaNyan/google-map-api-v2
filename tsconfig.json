{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["es5", "es6", "esnext", "dom"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
